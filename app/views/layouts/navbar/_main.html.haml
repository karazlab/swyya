%nav{class: "navbar navbar-light navbar-expand-lg #{controller_name.eql?('visitors') && action_name.eql?('index') ? '' : 'shadow-sm'}"}
  .container
    = link_to root_path, class: 'navbar-brand logo' do
      = image_tag('logo150.png')
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon

    = render partial: 'layouts/navbar/left_nav'
    #navbarSupportedContent.collapse.navbar-collapse
      = render partial: 'layouts/navbar/right_nav'
