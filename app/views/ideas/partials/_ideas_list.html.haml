- ideas.each do |idea|
  %div{class: "col-lg-#{targeted_col} col-md-#{targeted_col} col-sm-12 col-xs-12"}
    .card
      .card-body#custom-body
        .row
          .col-12
            %h5
              = link_to idea.title, idea, class: 'title'
            %p.card-text
              = truncate(idea.description, length: 50)