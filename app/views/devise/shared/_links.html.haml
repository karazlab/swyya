- if devise_mapping.omniauthable?
  %span.apple.mr-3= t(:sign_in_with)
  - resource_class.omniauth_providers.each do |provider|
    = link_to omniauth_authorize_path(resource_name, provider) do
      = icon('fab', provider, "#{OmniAuth::Utils.camelize(provider)}")
    .mx-2
  %hr
- if controller_name != 'sessions'
  = link_to t(:login), new_session_path(resource_name)
  .mb-1
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to t(:register), new_registration_path(resource_name)
  .mb-1
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to t(:forgot_your_password?), new_password_path(resource_name)
  .mb-1
